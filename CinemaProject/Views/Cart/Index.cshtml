@model List<DataAccess.Data.Entities.Movie>;

<div class="card text-center">
    <div class="card-header">
        My Cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Tickets to be booked:</h5>

        <ul class="list-group">
            @foreach (var i in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @i.Name
                    <span class="badge bg-primary rounded-pill">@i.TicketPrice$</span>
                </li>
            }
        </ul>

        <div>
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-success mt-3">Confirm</a>
        </div>
        <div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-2">Continue Booking</a>
        </div>
    </div>
    <div class="card-footer text-muted">
        Total: <span class="badge bg-primary">@Model.Sum(x => x.TicketPrice)$</span>
    </div>
</div>
