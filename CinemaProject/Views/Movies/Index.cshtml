@{
    ViewData["Title"] = "Movies";
}

@* @using DataAccess.Data.Entities; *@
@model List<DataAccess.Data.Entities.Movie>;

<h2>Movie List</h2>

<p>Manage movies in this list...</p>

<table class="table text-white">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Ticket</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr class="align-middle">
                <th scope="row">@i.Id</th>
                <td>@i.Name</td>
                <td>@i.TicketPrice$</td>
                <td>
                    @if (i.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Not available</span>
                    }
                </td>
                <td>
                    <div class="btn-group m-0" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Create" asp-route-id="@i.Id" class="btn btn-secondary">Create</a>
                        <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-light">Edit</a>
                        <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="text-center">Movie count: @Model.Count</p>